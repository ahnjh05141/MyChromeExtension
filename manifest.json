{
    "manifest_version": 3,
    "name": "Webcam Side Panel",
    "version": "1.0",
    "description": "실시간 웹캠 화면을 사이드 패널에 표시하는 익스텐션",
    "permissions": ["sidePanel", "storage", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {
      "default_title": "웹캠 보기"
    }
  }